<% flat = data.flats[owner] %>
<div class="banner" style="background: url(<%= flat.banner %>); height: 50vh; background-position: center; margin-bottom: 10px;">
</div>

<div class="header-flat">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-1">
        <div class="renter-info">
          <div class="name-id">
            <%= image_tag flat.owner_picture, class: "img-circle" %>
            <p><%= flat.owner_name %></p>
          </div>
          <div class="describe-home">
            <h1><%= flat.description %></h1>
            <p><%= flat.city %></p>
            <div class="description">
              <% (flat.rating).times do %>
              <i class="fa fa-star rating"> </i>
              <% end %>
              <% (5 - flat.rating).times do %>
              <i class="fa fa-star-o"> </i>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div class="grey-box">
        <div class="col-xs-12 col-sm-4">
          <form>
            <fieldset>
              <div class="check-in">
                <h2>Book this flat</h2>
                <div class="form-group">
                  <div class="row">
                    <div class="col-xs-6">
                      <input type="text" id="disabledTextInput" class="form-control" placeholder="Check-in">
                    </div>
                    <div class="col-xs-6">
                      <input type="text" id="disabledTextInput" class="form-control" placeholder="Check-out">
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <select id="disabledSelect" class="form-control">
                    <option>1 guest</option>
                    <option>2 guests</option>
                    <option>3 guests</option>
                    <option>4 guests</option>
                    <option>More than 4 guests</option>
                  </select>
                </div>
                <button type="submit" class="btn btn-primary" style="width: 100%">Book</button>
              </div>
            </fieldset>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>


